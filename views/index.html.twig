<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <title>Airline Planner</title>
    </head>
    <body>
        <div class="container">
            <h1>Airline Planner</h1>

            <form action="/departure_city_select" method="get">
                <div class="form-group">
                  <label for="departure_city_select">1. Select Departure City</label>
                  <select class="form-control" id="departure_city_select" name="departure_city_select">

                    {% for city in cities %}
                        <option>{{city.getName}}</option>
                    {% endfor %}
                  </select>
                  <button type="submit" class="btn btn-success">Go</button>
                </div>
            </form>
            <p>OR</p>
            <form action="/departure_city_add" method="post">
                <div class="form-group">
                    <label for="city-name">Add City Name</label>
                    <input class="form-control" id="city-name" name="city-name" type="text">
                    <button type="submit" class="btn btn-success">Add</button>
                </div>
            </form>
            <a href='/'><button class="btn btn-default">Home</button></a>
            <a href="/delete_cities"><button class="btn btn-danger">Delete All</button></a>



        </div>
    </body>
</html>
